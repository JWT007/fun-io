{
  "name": "software-documentation-template",
  "version": "0.4.1",
  "description": "This is a template for software documentation projects using Jekyll, PlantUML, webpack, Bootstrap, JQuery et al.",
  "main": "bundle.js",
  "scripts": {
    "build": "npm-run-all webpack 'jekyll build'",
    "clean": "rm -rf _site assets node_modules vendor/bundle",
    "prepare": "bundle install",
    "jekyll": "bundle exec jekyll",
    "start": "npm-run-all --parallel 'webpack -- -w' 'jekyll serve'",
    "webpack": "webpack"
  },
  "keywords": [
    "bootstrap",
    "jekyll",
    "jquery",
    "plantuml",
    "webpack"
  ],
  "author": "Christian Schlichtherle",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^4.1.0",
    "jquery": "^3.3.1",
    "popper.js": "^1.14.3"
  },
  "devDependencies": {
    "ajv": "^6.4.0",
    "autoprefixer": "^7.2.6",
    "css-loader": "^0.28.11",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.11",
    "loader-utils": "^1.1.0",
    "node-sass": "^4.9.0",
    "npm-run-all": "^4.1.2",
    "postcss-loader": "^2.1.4",
    "precss": "^2.0.0",
    "sass-loader": "^6.0.7",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.19.1",
    "webpack": "^3.11.0"
  }
}
