{
  "name": "software-documentation-template",
  "version": "0.0.1",
  "description": "This is a template for software documentation projects using Jekyll, PlantUML, webpack, Bootstrap, JQuery et al.",
  "main": "bundle.js",
  "scripts": {
    "build": "npm-run-all webpack 'jekyll build'",
    "clean": "rm -rf .jekyll-metadata .sass-cache _site assets node_modules uml vendor/bundle",
    "prepare": "bundle install",
    "jekyll": "bundle exec jekyll",
    "start": "npm-run-all --parallel 'webpack -- -w' 'jekyll serve'",
    "webpack": "webpack"
  },
  "keywords": [
    "jekyll",
    "plantuml",
    "webpack",
    "bootstrap",
    "jquery"
  ],
  "author": "Christian Schlichtherle",
  "license": "ISC",
  "dependencies": {
    "bootstrap": "^4.0.0-beta.2",
    "jquery": "^3.2.1",
    "popper.js": "^1.13.0"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.6",
    "css-loader": "^0.28.7",
    "extract-text-webpack-plugin": "^3.0.2",
    "file-loader": "^1.1.5",
    "node-sass": "^4.7.2",
    "npm-run-all": "^4.1.2",
    "postcss-loader": "^2.0.9",
    "precss": "^2.0.0",
    "sass-loader": "^6.0.6",
    "source-map-loader": "^0.2.3",
    "style-loader": "^0.19.0",
    "webpack": "^3.8.1"
  }
}
